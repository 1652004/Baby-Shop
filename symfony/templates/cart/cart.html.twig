{% extends 'home.html.twig' %}

{% block body %}
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center has-large-font-size">
                    <h1>Cart</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container post-container">
        <div class="row">
            <div class="col-md-12">
                <section role="main" class="post-open">
                    <article id="post-348" class="post-348 page type-page status-publish hentry">
                        <div class="shop-content">

                            <div class="woocommerce">
                                <div class="woocommerce-notices-wrapper"></div>

                                    <div class="row">
                                        <div class="col-md-8">

                                            <form class="woocommerce-cart-form" action="/cart/update">

                                            <table class="shop_table shop_table_responsive cart woocommerce-cart-form__contents"
                                                   cellspacing="0">
                                                <thead>
                                                <tr>
                                                    <th class="product-name" colspan="2">Product</th>
                                                    <th class="product-quantity">Quantity</th>
                                                    <th class="product-subtotal">Total</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {#{{ dump(cart) }}#}
                                                {% set sum_bill = 0 %}
                                                {% for i in cart %}
                                                <tr class="woocommerce-cart-form__cart-item cart_item">


                                                    <td class="product-thumbnail">
                                                        <a href="/cart/remove/{{ i.masanpham }} {#{{ path('removeProductFromCart',{'id':i.masanpham}) #}"
                                                           class="remove" aria-label="Remove this item"
                                                           data-product_id="94" data-product_sku="">×</a><a
                                                                href="/product/{{ i.masanpham }}"><img
                                                                    width="70" height="70"
                                                                    src="/images/{{ i.hinhurl }}"
                                                                    class="attachment-thumbnail size-thumbnail" alt=""
                                                                    srcset=""
                                                                    sizes="(max-width: 70px) 100vw, 70px"></a></td>

                                                    <td class="product-name" data-title="Product">
                                                        <a href="/product/{{ i.masanpham }}"> {{ i.tensanpham }}
                                                        </a>
                                                        <div class="product-price" data-title="Price">
                                                            <span class="woocommerce-Price-amount amount"><span
                                                                        class="woocommerce-Price-currencySymbol">₫ </span>{{ i.giasanpham }}</span>
                                                        </div>
                                                    </td>

                                                    <td class="product-quantity" data-title="Quantity">
                                                        <div class="quantity">
                                                            <label class="screen-reader-text"
                                                                   for="quantity_5c39a56c3e353">Quantity</label>
                                                            <input type="number" id="quantity_5c39a56c3e353"
                                                                   class="input-text qty text" step="1" min="0" max=""
                                                                   name="cart[f4b9ec30ad9f68f89b29639786cb62ef][qty]"
                                                                   value="{{ i.quantity }}" title="Qty" size="4" pattern="[0-9]*"
                                                                   inputmode="numeric"
                                                                   aria-labelledby="Casual buckle belt quantity">
                                                            <button class="ip-quantity-btn ip-quantity-btn--minus ip-prod-quantity-minus"
                                                                    type="button">-
                                                            </button>
                                                            <button class="ip-quantity-btn ip-prod-quantity-plus"
                                                                    type="button">+
                                                            </button>
                                                        </div>
                                                    </td>
                                                    {% set total =  i.giasanpham * i.quantity %}
                                                    <td class="product-subtotal" data-title="Total">
                                                        <span class="woocommerce-Price-amount amount"><span
                                                                    class="woocommerce-Price-currencySymbol">₫ </span>{{ total }}</span>
                                                    </td>

                                                    {% set sum_bill = sum_bill + total %}
                                                </tr>
                                                {% endfor %}
                                                {#-------------footer update table#}
                                                <tr>
                                                    <td colspan="4" class="actions">
                                                        <div class="update-cart">
                                                            <input type="submit" class="button" name="update_cart"
                                                                   value="Update cart" disabled="">
                                                            <input type="hidden" id="woocommerce-cart-nonce"
                                                                   name="woocommerce-cart-nonce"
                                                                   value="e0af392846">
                                                        </div>
                                                    </td>
                                                </tr>
                                                </tbody>
                                            </table>
                                            </form>
                                        </div>


                                        <div class="col-md-4">
                                            <div class="collaterals cart-collaterals">
                                                <div class="cart_totals ">


                                                    <div class="coupon">

			<span class="header">
				<a href="#">
				<svg>
					<use xlink:href="#svg-coupon"></use>
				</svg>
				Coupon code				</a>
			</span>
                                                        <div class="form">
                                                            <input type="text" name="coupon_code" class="input-text"
                                                                   id="coupon_code" value="" placeholder="Coupon code">
                                                            <button type="button" class="button" name="apply_coupon"
                                                                    >Apply coupon</button>
                                                        </div>

                                                    </div>
                                                    <form class="woocommerce-cart-form" action="/payment" method="post">

                                                    <table cellspacing="0" class="shop_table shop_table_responsive">
                                                        <tbody>
                                                        <tr class="cart-subtotal">
                                                            <th>Subtotal</th>
                                                            <td data-title="Subtotal"><span
                                                                        class="woocommerce-Price-amount amount"><span
                                                                            class="woocommerce-Price-currencySymbol">₫ </span>{{ sum_bill }}</span>
                                                            </td>
                                                        </tr>


                                                        <tr class="order-total">
                                                            <th>Total</th>
                                                            <td data-title="Total"><strong><span
                                                                            class="woocommerce-Price-amount amount"><span
                                                                                class="woocommerce-Price-currencySymbol">₫ </span>{{ sum_bill }}</span></strong>
                                                            </td>
                                                        </tr>

                                                        <input type="hidden" value="{{ sum_bill }}" name="sumbill">
                                                        <tr>
                                                            <td class="wc-proceed-to-checkout" colspan="2">

                                                                <input type="submit"
                                                                   class="checkout-button button alt wc-forward" name="payment" value="Checkout">
                                                            </td>
                                                        </tr>

                                                        </tbody>
                                                    </table>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                <div class="row">
                                    <div class="col-xs-12">
                                    </div>
                                </div>

                            </div>
                            <div class="clear"></div>

                        </div>


                    </article>

                </section>
            </div>
        </div>
    </div>

{% endblock %}